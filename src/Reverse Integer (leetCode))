class Solution {
    public int reverse(int x) {
        if(x<Integer.MIN_VALUE || x>Integer.MAX_VALUE){
            return 0;
        }

       int rev  = 0;
        while(x!=0){
           if(rev<Integer.MIN_VALUE || rev>Integer.MAX_VALUE){
             return 0;
           }
           rev = rev*10+x%10;
           x = x/10;
        } 
       return rev;
    }
}
